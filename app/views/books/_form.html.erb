<%= form_for book, html: {class: 'form-horizontal'} do |f| %>
    <!-- Si l'utilisateurs obtients des erreurs -->
    <% if book.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <!-- On parcours les erreurs et on affiche les messages des erreurs dans notre bloc message -->
            <% book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "Nom", class: 'col-md-4 control-label' %>
      <div class="col-md-6">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :cover, "Couverture", class: 'col-md-4 control-label' %>
      <div class="col-md-6">
        <%= f.file_field :cover, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :type_id, "Type", class: 'col-md-4 control-label' %>
      <div class="col-md-6">
        <%= f.select :type_id, Type.pluck(:name, :id), multiple: true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :publication, "Publication", class: 'col-md-4 control-label' %>
      <div class="col-md-6">
        <%= f.date_select :publication, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="cold-md-6 col-md-offset-4">
        <button type="submit" class="btn btn-primary">
          <%= book.new_record? ? 'CrÃ©er' : 'Modifier' %>
        </button>
      </div>
    </div>
<% end %>